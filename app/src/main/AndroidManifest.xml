<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.merlinsbeard.flashcardspro">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateAccountActivity"
            android:label="Create Account"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SetViewActivity"
            android:label="Sets"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AccountViewActivity"
            android:label="Account"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FlashCardView"
            android:label="Flashcards"
            android:screenOrientation="portrait" />
        <activity android:name=".ScrollView"
            android:label="Flashcard"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>